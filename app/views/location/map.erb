<div id="bar" style="position: absolute;" class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div style="width: auto; padding: 0 20px;" class="container">
      <div class="row-fluid">
        <div class="span2">
          <img class="img-polaroid" style="margin-top:1em;" src="<%= @traveller.gravatar %>" />
        </div>
        <div class="span10 nav">
          <p class="lead">
            <h1><%= link_to @traveller.name, url_for(:index) %></h1>
            <p class="lead"><%= "#{@verb} been #{preposition} #{@location}" %>.</p>
          </p>
          <%= join_us_link %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="map" style="width:100%; height:100%"></div>
<script>goto('<%= CGI.escape(@location.hint || @location) unless @location.nil? %>');</script>
